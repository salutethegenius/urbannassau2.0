// Prisma schema for Urban Nassau Rides

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // hashed with bcrypt
  name      String?
  createdAt DateTime @default(now())
}

model FareSettings {
  id               Int      @id @default(1)
  rideStandardBase Float    @default(18)
  ridePremiumBase  Float    @default(20)
  freeDistance     Float    @default(5)
  perMileRate      Float    @default(4)
  passengerFee     Float    @default(5)
  courierBase      Float    @default(12)
  errandBase       Float    @default(25)
  shoppingBase     Float    @default(50)
  transportBase    Float    @default(20)
  updatedAt        DateTime @updatedAt
}

model FareHistory {
  id             Int      @id @default(autoincrement())
  serviceType    String
  pickupAddress  String
  dropoffAddress String
  distance       Float
  passengers     Int
  baseFare       Float
  distanceFare   Float
  passengerFare  Float
  totalFare      Float
  createdAt      DateTime @default(now())
}

model Booking {
  id             Int      @id @default(autoincrement())
  bookingDate    DateTime // The date of the booking
  bookingHour    Int      // Hour of day (0-23)
  serviceType    String
  pickupAddress  String
  dropoffAddress String
  distance       Float
  passengers     Int
  totalFare      Float
  customerPhone  String?
  status         String   @default("pending") // pending, confirmed, completed, cancelled
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
